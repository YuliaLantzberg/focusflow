generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Enums ----------

enum ProjectStatus {
  PLANNING
  ACTIVE
  COMPLETED
  ON_HOLD
  ARCHIVED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  BLOCKED
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

// ---------- Models ----------

model User {
  id           String  @id @default(cuid())
  email        String  @unique
  passwordHash String
  name         String?
  timezone     String?

  projects Project[]
  clients Client[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// A client project the user is working on
model Project {
  id      String @id @default(cuid())
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])
  clientId String? 
  client Client? @relation(fields: [clientId], references: [id])

  name        String
  description String?
  status      ProjectStatus @default(PLANNING)
  isVisible   Boolean       @default(true)

  dueDate  DateTime?
  budget   Decimal?  @db.Decimal(10, 2)
  colorHex String?

  tasks Task[]
  notes ProjectNote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
  @@index([clientId])
}

// A task that belongs to a project
model Task {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  title       String
  description String?

  status   TaskStatus   @default(TODO)
  priority TaskPriority @default(MEDIUM)

  dueDate DateTime?
  order   Int       @default(0)

  estimatedMinutes Int?
  timeSpentMinutes Int?

  isBillable Boolean  @default(true)
  cost       Decimal? @db.Decimal(10, 2)

  isVisible Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([status])
}

// A client on whose project the user is working on
model Client {
  id      String @id @default(cuid())
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  companyName        String
  notes String?

  contactName  String?
  email String?
  phone String?

  projects Project[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([ownerId])
}


// Free-form notes per project (no authorId â€“ solo user app)
model ProjectNote {
  id        String  @id @default(cuid())
  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  title    String?
  content  String
  isPinned Boolean @default(false)

  isVisible Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}
